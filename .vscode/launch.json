{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run (Windows)",
            "program": "${workspaceFolder}/build/aoc_2018.exe",
            "cwd": "${workspaceFolder}/build",
            "args": [
                "${input:day}"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Test (Windows)",
            "program": "${workspaceFolder}/build/aoc_2018.exe",
            "cwd": "${workspaceFolder}/build",
            "args": [
                "-t",
                "${input:day}"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Run (Linux)",
            "program": "${workspaceFolder}/build/aoc_2018",
            "cwd": "${workspaceFolder}/build",
            "args": [
                "${input:day}"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Test (Linux)",
            "program": "${workspaceFolder}/build/aoc_2018",
            "cwd": "${workspaceFolder}/build",
            "args": [
                "-t",
                "${input:day}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "day",
            "type": "promptString",
            "description": "Day to run",
            "default": "1"
        }
    ]
}
